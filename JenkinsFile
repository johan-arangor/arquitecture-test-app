pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/johan-arangor/arquitecture-test-app.git'
            }
        }
        stage('Build') {
            steps {
                sh 'docker build -t arquitecture-app .'
            }
        }
        stage('Test') {
            steps {
                sh 'docker run --rm arquitecture-app npm test'
            }
        }
        stage('Start') {
            steps {
                sh 'docker run -d --name arquitecture-app -p 8000:8000 arquitecture-app npm start'
            }
        }
    }
    post {
        success {
            echo 'Pipeline ejecutado correctamente!'
        }

        failure {
            echo 'El pipeline ha fallado!'
        }
    }
}